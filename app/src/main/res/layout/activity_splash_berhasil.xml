<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/borderorange"
    android:layout_margin="20dp"
    tools:context=".SplashBerhasil">

    <ImageView
        android:id="@+id/imageHapus"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/ic_restaurant_black_24dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:id="@+id/tv1"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pesanan Berhasil.."
        android:textColor="@color/black"
        android:layout_below="@+id/imageHapus"
        android:gravity="center"
        android:textSize="20dp"/>

</RelativeLayout>