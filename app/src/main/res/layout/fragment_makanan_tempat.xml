<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MakananTempat">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </androidx.recyclerview.widget.RecyclerView>

    </ScrollView>
    
    <RelativeLayout
        android:id="@+id/bottomSheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:behavior_hideable="true"
        app:behavior_peekHeight="0dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvList"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="2.5dp"
            app:cardBackgroundColor="@color/white">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp">

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/imageTampil"
                    android:layout_alignParentLeft="true"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:scaleType="centerInside">
                </com.mikhaellopez.circularimageview.CircularImageView>

                <TextView
                    android:id="@+id/tvNamamenu"
                    android:layout_toRightOf="@+id/imageTampil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="EXAMPLE"
                    android:textColor="#0A0A0A"
                    android:textSize="15dp"
                    android:textStyle="bold">
                </TextView>

                <TextView
                    android:id="@+id/tvHargamenu"
                    android:layout_below="@id/tvNamamenu"
                    android:layout_toRightOf="@id/imageTampil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="EXAMPLE"
                    android:textColor="#FF5722"
                    android:textSize="18dp"
                    android:textStyle="bold">

                </TextView>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvList2"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cvList"
            android:padding="10dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="2.5dp"
            app:cardBackgroundColor="@color/white">

            <RelativeLayout
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_centerInParent="true"
                    android:layout_alignParentTop="true"
                    android:id="@+id/btn_kurang"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@color/white"
                    android:layout_toLeftOf="@+id/et_Qty"
                    android:layout_marginRight="20dp"
                    android:text="-"
                    android:textSize="20dp"
                    android:textColor="@color/black">

                </Button>

                <EditText
                    android:layout_alignParentTop="true"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:id="@+id/et_Qty"
                    android:background="@color/white"
                    android:layout_centerInParent="true"
                    android:inputType="number"
                    android:text="0"
                    android:gravity="center"
                    android:textColor="@color/black">

                </EditText>

                <Button
                    android:layout_centerInParent="true"
                    android:layout_alignParentTop="true"
                    android:id="@+id/btn_tambah"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@color/white"
                    android:layout_toRightOf="@+id/et_Qty"
                    android:layout_marginLeft="20dp"
                    android:text="+"
                    android:textSize="20dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/subtotal"
                    android:layout_below="@+id/et_Qty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="000"
                    android:gravity="center"
                    android:textColor="@color/black">

                </TextView>

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_margin="5sp"
                    android:padding="5sp"
                    android:layout_below="@id/subtotal"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/pesan"
                    android:text="pesan"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_below="@+id/spinner"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_button">

                </Button>


            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>




</androidx.coordinatorlayout.widget.CoordinatorLayout>